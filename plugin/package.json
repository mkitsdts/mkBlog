{
    "name": "mkblog-plugin",
    "displayName": "mkBlog Uploader",
    "description": "Upload Markdown Files in folder and the images to server. Support drag&drop images in markdown editor.",
    "version": "0.0.1",
    "publisher": "mkitsdts",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mkBlog.uploadFolder",
                "title": "mkBlog: Upload Folder as Blog"
            },
            {
                "command": "mkBlog.refreshArticles",
                "title": "mkBlog: Refresh Article List"
            },
            {
                "command": "mkBlog.deleteArticle",
                "title": "mkBlog: Delete Article"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mkBlog",
                    "title": "mkBlog",
                    "icon": "media/mkblog.svg"
                }
            ]
        },
        "views": {
            "mkBlog": [
                {
                    "id": "mkBlog.articles",
                    "name": "文章"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "mkBlog.refreshArticles",
                    "when": "view == mkBlog.articles",
                    "group": "navigation@1"
                },
                {
                    "command": "mkBlog.uploadFolder",
                    "when": "view == mkBlog.articles",
                    "group": "navigation@0"
                }
            ],
            "view/item/context": [
                {
                    "command": "mkBlog.deleteArticle",
                    "when": "view == mkBlog.articles",
                    "group": "inline@1"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "mkBlog Settings",
            "properties": {
                "mkBlog.uploadArticleUrl": {
                    "type": "string",
                    "default": "http://localhost:3000/article/{title}",
                    "description": "Article upload URL(PUT Article JSON)。Support {title} or {id} as placeholder"
                },
                "mkBlog.uploadImageUrl": {
                    "type": "string",
                    "default": "http://localhost:3000/image",
                    "description": "Image upload URL(PUT Image JSON,includes title/data/name)"
                },
                "mkBlog.author": {
                    "type": "string",
                    "default": "",
                    "description": "Default author(Article.Author)"
                },
                "mkBlog.defaultCategory": {
                    "type": "string",
                    "default": "General",
                    "description": "Default category(Article.Category)"
                },
                "mkBlog.listUrl": {
                    "type": "string",
                    "default": "http://localhost:3000/api/articles",
                    "description": "Article list API URL(GET)"
                },
                "mkBlog.deleteUrl": {
                    "type": "string",
                    "default": "http://localhost:3000/article/{title}",
                    "description": "Delete article API URL, support placeholder {title} (replace with filename/title) or {id}?"
                },
                "mkBlog.authToken": {
                    "type": "string",
                    "default": "",
                    "description": "Optional auth token, will be sent as Authorization: Bearer <token>"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^18.19.50",
        "@types/vscode": "^1.90.0",
        "esbuild": "^0.25.0",
        "typescript": "^5.5.4",
        "@vscode/vsce": "^3.6.1"
    },
    "dependencies": {}
}