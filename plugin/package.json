{
    "name": "mkblog-plugin",
    "displayName": "mkBlog Uploader",
    "description": "Upload Markdown Files in folder and the images to server. Support drag&drop images in markdown editor.",
    "version": "0.0.1",
    "publisher": "mkitsdts",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mkBlog.uploadFolder",
                "title": "Upload"
            },
            {
                "command": "mkBlog.refreshArticles",
                "title": "Refresh"
            },
            {
                "command": "mkBlog.deleteArticle",
                "title": "Delete"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mkBlog",
                    "title": "mkBlog",
                    "icon": "media/mkblog.svg"
                }
            ]
        },
        "views": {
            "mkBlog": [
                {
                    "id": "mkBlog.articles",
                    "name": "文章",
                    "icon": "media/article.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "mkBlog.refreshArticles",
                    "when": "view == mkBlog.articles",
                    "group": "navigation@1"
                },
                {
                    "command": "mkBlog.uploadFolder",
                    "when": "view == mkBlog.articles",
                    "group": "navigation@0"
                }
            ],
            "view/item/context": [
                {
                    "command": "mkBlog.deleteArticle",
                    "when": "view == mkBlog.articles",
                    "group": "inline@1"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "mkBlog Settings",
            "properties": {
                "mkBlog.baseUrl": {
                    "type": "string",
                    "default": "http://localhost:8080",
                    "description": "后端服务基础地址，例如 http://localhost:8080"
                },
                "mkBlog.defaultAuthor": {
                    "type": "string",
                    "default": "",
                    "description": "文章默认作者(可在 Markdown 元数据中覆盖)"
                },
                "mkBlog.author": {
                    "type": "string",
                    "default": "",
                    "description": "(兼容旧版本) 文章默认作者，建议改用 mkBlog.defaultAuthor"
                },
                "mkBlog.defaultCategory": {
                    "type": "string",
                    "default": "General",
                    "description": "文章默认分类(可在 Markdown 元数据中覆盖)"
                },
                "mkBlog.authToken": {
                    "type": "string",
                    "default": "",
                    "description": "Optional auth token, will be sent as Authorization: Bearer <token>"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^18.19.50",
        "@types/vscode": "^1.90.0",
        "esbuild": "^0.25.0",
        "typescript": "^5.5.4",
        "@vscode/vsce": "^3.6.1"
    },
    "dependencies": {}
}